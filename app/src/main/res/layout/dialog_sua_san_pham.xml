<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sửa Sản Phẩm  "
        android:textSize="24dp"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Hình ảnh sản phẩm"
        />

    <ImageView
        android:id="@+id/iv_suahinhsp"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_add"/>

    <TextView
        android:id="@+id/tv_sua_trang_thai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nhập Tên Sản Phẩm"
        />
    <EditText
        android:id="@+id/txt_sTenSP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:hint="Tên Sản Phẩm "
        android:background="@drawable/khung_vien"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nhập Số Lượng Sản Phẩm"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_SsoLuongSP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số Lượng Sản Phẩm "
        android:textSize="14dp"
        android:background="@drawable/khung_vien"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nhập Giá Sản Phẩm"
        />
    <EditText
        android:id="@+id/txt_SgiaSP"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá Sản Phẩm "
        android:textSize="14dp"
        android:background="@drawable/khung_vien"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_SThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bottom_red"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/btn_SLuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bottom"
            app:backgroundTint="@null"
            />
    </LinearLayout>


</LinearLayout>
</ScrollView>